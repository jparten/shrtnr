<div class="container">
  <div id="shorten">
    <div class="col-md-offset-2 col-md-7">
      <h1 class="text-center">MAKE YOUR LINKS COUNT!</h1>
      <div class="panel panel-default">
        <div class="panel-body">
          <%= form_for link, html: { class: 'form-inline' } do |f| %>
            <div class="form-group col-xs-8">
              <%= f.url_field :long_url, id: "long_url", class: 'form-control input-lg short-link' %>
            </div>
            <div class="form-group col-xs-4">
              <%= f.submit "Shorten It!", class: 'btn-lg btn-primary pull-right' %>
            </div>
            <% if signed_in_through_twitter? %>
              <div class="form-group col-xs-6">
                <%= f.check_box :tweet %>
                <%= f.label "Tweet this link!" %>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
